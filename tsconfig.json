{
  "compilerOptions": {
    "downlevelIteration": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitReturns": true,
    "preserveSymlinks": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": ["build", "node_modules"]
}
